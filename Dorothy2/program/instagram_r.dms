function () {

  common_load ('rutil', 'http', 'namebuilder', 'utf8');
  Util.min_version (20150316.0);

  // 設定ファイルの読み込み
  var default_ini = {
    General: {
      Zen2Han: false
    },
    Filename: {
      Photo: 'instagram_%ID%'
    }
  };
  var ini = Util.ini_load (default_ini);


//---------------------- 下請け ----------------------//


// 画像をダウンロード
function dl_cid (cid) {
  nb.id = cid;

  var url = 'https://instagram.com/p/' + cid + '/';
  var http = new Http ();
  if (!http.get (url)) {
    return http.retry_or_die ();
  }


  // Twitter ID を探す
  if (/"username":"([^"]+)"/.test (http.data)) {
    nb.twitter_id = RegExp.$1;
  }

  // 題名を探す
  if (/"caption":"([^"]+)"/.test (http.data)) {
    nb.title = (new Utf8 (RegExp.$1)).unescape ();
  }

  // 画像 URL を探す
  if (!/<meta\s+property="og:image"\s+content="([^"]+)"/.test (http.data)) {
    http.die ('画像の URL が見つかりません。');
  }
  var content_url = RegExp.$1;
  var content_type = 'Photo';


  // ダウンロード情報を設定
  nb.setFilename (ini.Filename [content_type], content_url);

  Dorothy.setUrl (content_url, url);
}


//-------------------- メイン処理 --------------------//


  var nb = new NameBuilder ({ zen2han: ini.General.Zen2Han });

  // ファイル名の生成に使える情報
  nb.twitter_id = null;  // Twitter ID
  nb.id = null;          // コンテンツID
  nb.title = null;       // 題名


  var path = (new URL (urlinfo.url)).path.slice (1);

  if (/^p\/([^\/#?]+)/.test (path)) {
    // 画像の HTML ページ
    dl_cid (RegExp.$1);
    return;
  }

  println ('未対応の URL です。');
  return;
}


